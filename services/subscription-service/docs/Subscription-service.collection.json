	  "/plan/createPlan": {
		"post": {
		  "summary": "Créer un plan",
		  "tags": ["Plans"],
		  "requestBody": {
			"required": true,
			"content": {
			  "application/json": {
				"schema": {
				  "type": "object",
				  "properties": {
					"name": {
					  "type": "string",
					  "enum": ["free", "lite", "pro", "enterprise"],
					  "default": "free"
					},
					"price": {
					  "type": "number",
					  "format": "float",
					  "example": 29.99
					},
					"billing_cycle": {
					  "type": "string",
					  "enum": ["monthly", "annually"],
					  "example": "monthly"
					},
					"features": {
					  "type": "array",
					  "items": {
						"type": "string"
					  },
					  "example": ["Accès illimité", "Support 24/7", "Stockage 100GB"]
					},
					"product_id": {
					  "type": "string",
					  "example": "67d021cb40174eea4d41f1f5"
					}
				  }
				},
				"example": {
				  "name": "pro",
				  "price": 29.99,
				  "billing_cycle": "monthly",
				  "features": ["Accès illimité", "Support 24/7", "Stockage 100GB"],
				  "product_id": "67d021cb40174eea4d41f1f5"
				}
			  }
			}
		  },
		  "responses": {
			"201": {
			  "description": "Plan créé avec succès",
			  "content": {
				"application/json": {
				  "schema": {
					"type": "object",
					"properties": {
					  "_id": {
						"type": "string",
						"example": "67d021cb40174eea4d41f1f6"
					  },
					  "name": {
						"type": "string",
						"example": "pro"
					  },
					  "price": {
						"type": "number",
						"example": 29.99
					  },
					  "billing_cycle": {
						"type": "string",
						"example": "monthly"
					  },
					  "features": {
						"type": "array",
						"items": {
						  "type": "string"
						},
						"example": ["Accès illimité", "Support 24/7", "Stockage 100GB"]
					  },
					  "product_id": {
						"type": "string",
						"example": "67d021cb40174eea4d41f1f5"
					  }
					}
				  }
				}
			  }
			},
