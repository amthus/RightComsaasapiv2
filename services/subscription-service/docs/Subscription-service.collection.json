	"paths": {
	  "/product/product": {
		"post": {
		  "summary": "Créer un produit",
		  "tags": ["Produits"],
		  "requestBody": {
			"required": true,
			"content": {
			  "multipart/form-data": {
				"schema": {
				  "type": "object",
				  "properties": {
					"product_name": {
					  "type": "string"
					},
					"description": {
					  "type": "string"
					},
					"image": {
					  "type": "string",
					  "format": "binary"
					}
				  }
				}
			  }
			}
		  },
		  "responses": {
			"201": {
			  "description": "Produit créé avec succès",
			  "content": {
				"application/json": {
				  "schema": {
					"type": "object",
					"properties": {
					  "_id": {
						"type": "string",
						"example": "67d021cb40174eea4d41f1f5"
					  },
					  "product_name": {
						"type": "string",
						"example": "Produit A"
					  },
					  "description": {
						"type": "string",
						"example": "Description du produit A"
					  },
					  "image": {
						"type": "string",
						"example": "https://example.com/image.png"
					  }
					}
				  }
				}
			  }
			},
			"400": {
			  "description": "Requête invalide - Données manquantes ou incorrectes"
			},
			"500": {
			  "description": "Erreur serveur - Impossible de créer le produit"
			}
		  }
		},
		"get": {
		  "summary": "Récupérer tous les produits",
		  "tags": ["Produits"],
		  "responses": {
			"200": {
			  "description": "Liste des produits récupérée avec succès",
			  "content": {
				"application/json": {
				  "schema": {
					"type": "array",
					"items": {
					  "type": "object",
					  "properties": {
						"_id": {
						  "type": "string",
						  "example": "67d021cb40174eea4d41f1f5"
						},
						"product_name": {
						  "type": "string",
						  "example": "Produit A"
						},
						"description": {
						  "type": "string",
						  "example": "Description du produit A"
						},
						"image": {
						  "type": "string",
						  "example": "https://example.com/image.png"
						}
					  }
					}
				  }
				}
			  }
			},
			"500": {
			  "description": "Erreur serveur - Impossible de récupérer les produits"
			}
		  }
		}
	  },
